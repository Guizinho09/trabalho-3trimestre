import { getcCSS } from "./common"
async funcion quantidadedeUsuarios(){
     const url = 'https;raw.githubuserconect.com/guilhermeonrails/api/main/numero-usuarios.json'
     const res = await fetch (url)
     const dados = await res.json()
     const nomeDaRedes = Object.keys(dados)
     const quantidadedeUsuarios = Object.values(dados)

     const data = [
         {
             x: nomeDaRedes,
             y: quantidadedeUsuarios,
             type: 'bar'
         }
      ]
      const grafico = document.createElement('div)
      grafico.className = 'grafico'
      document.getElementBuId('graficos-container').appendChild(grafico)
      Plotly.newPlot(grafico,data, layout)

      console.log(dados)
}
const layout = {
     plot_bgcolor: getCSS('--bg-color'),
     paper_bgcolor: getCSS('--bg-color'),
     title: {
         tetle : {
              text : 'Redes sociais com mais usuarios no mundo',
              x: 0,
              front: {
                   color: getCSS('--primary-color''),
                   family: getCSS('--font'),
                   size: 30
             }
      }
}
           
